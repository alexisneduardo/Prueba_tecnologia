  <script>
    function enviarNota() {
      let total = 0;
      for (let i = 1; i <= 16; i++) {
        const opciones = document.getElementsByName("q" + i);
        for (const op of opciones) {
          if (op.checked) {
            total += parseInt(op.value);
          }
        }
      }

      const nombre = document.getElementById("nombre").value.trim();
      const curso = document.getElementById("curso").value.trim();
      const respuestaDesarrollo = document.getElementById("respuestaDesarrollo").value.trim();

      if (!nombre || !curso) {
        alert("Por favor, completa nombre y curso.");
        return;
      }

      // Escala chilena: 1,0 a 7,0
      let nota = ((total / 16) * 6) + 1;
      nota = Math.round(nota * 10) / 10; // Redondear a un decimal

      document.getElementById("notaFinal").innerText = `Tu nota automática (sin incluir la pregunta de desarrollo) es: ${nota}/7.0`;

      emailjs.send("service_jira4eu", "template_p0em2uk", {
        nombre: nombre,
        curso: curso,
        nota: nota,
        desarrollo: respuestaDesarrollo
      })
      .then(() => {
        alert("¡Calificación enviada al profesor!");
      }, (error) => {
        alert("Error al enviar correo: " + JSON.stringify(error));
      });
    }
  </script>
